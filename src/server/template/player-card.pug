style.
    .card {
        display: flex;
        flex-wrap: wrap;
        background-color: darkcyan;
    }
div.card
    div.image
    div.info
        p jugador: #{player.name}
            = player.alive ? " esta vivo" : " esta muerto"
        p se unio el #{player.born}
        p jugo #{player.time} milisegundos
        if !player.alive
            p murio el #{player.died}
            p
                | por #{player.death_reason}
                if player.death_by !== "UNKNOWN"
                    | de #{player.death_by}